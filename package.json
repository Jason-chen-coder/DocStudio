{
  "name": "docStudio",
  "version": "1.0.0",
  "private": true,
  "description": "DocStudio - Real-time collaborative wiki/documentation platform",
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:web": "pnpm --filter @docStudio/web dev",
    "dev:api": "pnpm --filter @docStudio/api dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "build:web": "pnpm --filter @docStudio/web build",
    "build:api": "pnpm --filter @docStudio/api build",
    "lint": "pnpm --recursive lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "typecheck": "pnpm --recursive typecheck",
    "clean": "pnpm --recursive clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
